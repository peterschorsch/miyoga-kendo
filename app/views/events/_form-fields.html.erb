<div class="row text-center">
	<div class="col-xs-12"><%= f.label :title, 'Event Name:' %></div>
</div>
<div class="row text-center">
	<div class="col-xs-12"><%= f.text_field :title, { class: 'form-control', placeholder: "Example Event Name" } %></div>
</div>
<br />
<div class="row text-center">
	<div class="col-xs-5"><%= f.label :start_date, 'Start Date:' %></div>
	<div class="col-xs-2 text-center"></div>
	<div class="col-xs-5"><%= f.label :end_date, 'End Date:' %></div>
</div>
<div class="row text-center">
	<div class="col-xs-5"><%= f.date_field :start_date, { class: 'form-control' } %></div>
	<div class="col-xs-2 text-center"><p>to</p></div>
	<div class="col-xs-5"><%= f.date_field :end_date, { class: 'form-control' } %></div>
</div>
<br />
<div class="row text-center">
	<div class="col-xs-12"><%= f.label :description, 'Event Description:' %></div>
</div>
<div class="row">
	<div class="col-xs-12"><%= f.text_area :description, { class: 'form-control', rows: 20, placeholder: "Example Event Description" } %></div>
</div>
<hr />
<h1 class="text-center">Event Address</h1>
<div class="row">
	<div class="col-xs-12"><%= f.select :address_id, Address.return_address_dropdown_w_state_name, {}, { class: 'form-control' } %></div>
</div>
<br />
<div class="row">
	<div class="col-xs-4 col-md-offset-2"><%= render new_btn_path, path: new_admin_address_path, text: "Address" %></div>
	<div class="col-xs-4"><%= render edit_btn_path, edit_path: admin_addresses_path %></div>
</div>