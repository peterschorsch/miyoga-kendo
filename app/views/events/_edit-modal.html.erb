<div class="modal fade" id="aboutEditModal" tabindex="-1" role="dialog" aria-labelledby="aboutModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="modal-title" id="aboutModalLabel">Edit Event</h1>
			</div>
			<div class="modal-body">
				<%= render "templates/alerts/form-errors", model: event %>

				<%= form_with(model: event, local: true, :validate => true, html: { class: "form-horizontal", autocomplete: "off" }) do |f| %>
					<div class="row vertical-align-middle">
						<div class="col-xs-2 align-right"><%= f.label :title, 'Title:' %></div>
		          		<div class="col-xs-10"><%= f.text_field :title, { class: 'form-control' } %></div>
		          	</div>
		          	<hr />
		          	<div class="row vertical-align-middle">
		          		<div class="col-xs-2 align-right"><%= f.label :start_date, 'Start Date:' %></div>
		          		<div class="col-xs-4"><%= f.date_field :start_date, { class: 'form-control' } %></div>
		          		<div class="col-xs-2 align-right"><%= f.label :end_date, 'End Date:' %></div>
		          		<div class="col-xs-4"><%= f.date_field :end_date, { class: 'form-control' } %></div>
		          	</div>
		          	<hr />
		          	<div class="row">
		          		<div class="col-xs-2 align-right"><%= f.label :description, 'Description:' %></div>
		          		<div class="col-xs-10"><%= f.cktext_area :description, { class: 'form-control', language: "us" } %></div>
		          	</div>
		          	<br />
			</div>
			<div class="modal-footer">
				<%= submit_tag 'Cancel', :type => 'button', class: "btn btn-danger", data: { toggle: 'modal', 'target': '#aboutEditModal' } %>
				<%= f.submit "Save Changes", class: 'btn btn-success' %>
			</div>
			<% end %>	
		</div>
	</div>
</div>