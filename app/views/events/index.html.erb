<% if notice && current_user.is_admin? %>
	<div class="row">
		<div class="col-md-8 col-xs-1 col-md-offset-2">
			<%= render "templates/alerts/notice" %>
		</div>
	</div>
<% end %>

<% @events.each_with_index do |event, index| %>
	<%= render "heading", event: event, index: index %>
	<div class="row">
		<div class="col-md-12">
			<h2><%=formatEventsDateRange(event.start_date, event.end_date)%></h2>
		</div>
	</div>
	<br />
	<div class="row">
		<div class="col-md-6 col-sm-12"><p><%=event.description.html_safe%></p></div>
		<div class="col-md-6 col-sm-12"><%= render "templates/google_maps", location_name: event.address.contacts.first.name, address: event.address, height: 600, width: 650 %></div>
	</div>
	<br /><hr /><br />
	<%= render "edit-modal", event: event %>
	<%= render "templates/modals/remove-record-dialog", heading: "Event", index: index, record: event %>
<% end %>