<%= render "templates/heading", text: "Admin Dashboard", list_of_classes: "align-center" %>
<%= render "templates/alerts/notice" if notice && current_user.is_admin? %>

<%#= link_to "About", admin_abouts_path, :class => "btn btn-danger" %>
<%#= link_to "Events", admin_events_path, :class => "btn btn-success" %>
<%#= link_to "Class Schedule", admin_practices_path, :class => "btn btn-info" %>
<%#= link_to "Resources", admin_resources_path, :class => "btn btn-primary" %>
<div class="btn-group-vertical" style = "background-color: #00009a">
	<%= link_to "About", admin_users_path, :class => "btn btn-primary btn-lg" %>
	<%= link_to "Events", admin_users_path, :class => "btn btn-primary btn-lg" %>
	<%= link_to "Class Schedule", admin_users_path, :class => "btn btn-primary btn-lg" %>
	<%= link_to "Resources", admin_users_path, :class => "btn btn-primary btn-lg" %>
</div>


<div class="row row-padding">
	<div class="col-md-6 col-sm-12">
		<div class="panel-group">
			<div class="panel panel-default">
				<div class="panel-heading">
					<div class="row vertical-align-middle">
						<div class="col-xs-8">
							<h1>
								<span class="glyphicon glyphicon-user"></span> Users
								<span class='badge' style='background-color: #777777'><%=@user_count%></span>
							</h1>
						</div>
						<div class="col-xs-4">
							<%= link_to "View All Users &raquo".html_safe, admin_users_path, :class => "btn btn-success btn-block" %>
						</div>
					</div>
				</div>
				<div class="panel-body">
					<table class="table table-striped">
						<thead>
							<tr class="align-center">
								<th>Name</th>
								<th>Email</th>
								<th>Role</th>
								<th>Last Login</th>
							</tr>
						</thead>
						<tbody>
							<% @users.each do |user| %>
								<tr class="align-center">
									<td><%=user.concat_name%></td>
									<td><%=user.email%></td>
									<td><%=user.role%></td>
									<td><%=nil_check(user.last_login) ? "n/a" : formateDateTimeWithAt(user.last_login) %></td>
								</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
	<div class="col-md-6 col-sm-12">
		<div class="panel-group">
			<div class="panel panel-default">
				<div class="panel-heading">
					<div class="row vertical-align-middle">
						<div class="col-xs-8">
							<h1><span class="glyphicon glyphicon-user"></span> Social Media Accounts</h1>
						</div>
						<div class="col-xs-4">
							<%= link_to "View All Social Media &raquo".html_safe, admin_social_media_path, :class => "btn btn-success btn-block" %>
						</div>
					</div>
				</div>
				<div class="panel-body">
					<% @social_media.in_groups_of(3) do |social_media_array| %>
						<div class="row align-center">
							<% social_media_array.compact.each do |social_media| %>
								<div class="col-md-4 col-sm-12 padding-top-bottom">
									<%= link_to image_tag("logos/#{social_media.image_link}", alt: "#{social_media.site_name} Logo") + " #{social_media.site_name}", social_media.site_link, target: '_blank', class: "social_media_logo" %>
								</div>
							<% end %>
						</div>
					<% end %>	
				</div>
			</div>
		</div>
	</div>
</div>