<%= render "templates/alerts/admin-notice" %>

<div class="row vertical-align-middle">
	<div class="col-md-3">
		<%= render "templates/buttons/back-to-page", text: "News", path: admin_announcements_path %>
	</div>
	<div class="col-md-9 align-right">
		<%= render "templates/admin-modified-by", content: @announcement %>
	</div>
</div>

<div class="row vertical-align-middle">
	<div class="col-md-10">
		<h1><%= @announcement.heading %></h1>
	</div>
	<div class="col-md-2">
		<%= link_to edit_admin_announcement_path(@announcement), :class => "btn btn-warning btn-block", title: "Edit", 'data-toggle' => 'tooltip' do %> 
			<span class="glyphicon glyphicon-edit"></span> Edit
		<% end %>
	</div>
</div>
<hr />

<div class="row">
	<% if tf_check(@announcement.image_file_name) %>
		<%= render "announcements/text-only-news", news: @announcement %>
	<% else %>
		<%= render "announcements/text-image-news", news: @announcement %>
	<% end %>
</div>
