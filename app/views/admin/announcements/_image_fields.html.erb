<div class="row vertical-align-middle">
	<% if @new_announcement.new_record? %>
		<div class="col-xs-2 align-right"><%= f.label :image, 'Attach Image:' %></div>
		<div class="col-xs-9"><%= f.file_field :image, class: 'form-control' %></div>
	<% else %>
		<div class="col-xs-2 align-right"><%= f.label 'Current Image:' %></div>
		<div class="col-xs-3"><%= image_tag("news_page/" + f.object.image_file_name, class: "small-form-image", alt: f.object.image_file_name) if not f.object.image_file_name.nil? %></div>
		<div class="col-xs-3 align-right"><%= f.label :image, 'Replace Current Image:' %></div>
		<div class="col-xs-3"><%= f.file_field :image, class: 'form-control' %></div>
	<% end %>
</div>