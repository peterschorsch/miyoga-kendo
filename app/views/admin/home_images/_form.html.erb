<%= form_with(model: [:admin, image], url: admin_home_image_path, local: true, :validate => true, html: { class: "form-horizontal", autocomplete: "off" }) do |form| %>
  <%= render form_errors_path, model: @image %>
  
  <div class="row text-center">
    <div class="col-md-8 col-xs-12 col-md-offset-2">
      <%= form.label :image, 'Current Image:' %>
      <%= image_tag("home_page/#{@image.image_file_name}", class: "admin-home-table-image", alt: @image.image_file_name)%>
    </div>
  </div>
  <br /><br />
  <div class="row text-center">
    <div class="col-md-8 col-xs-12 col-md-offset-2">
      <%= form.label :image, 'New Image:' %>
      <%= form.file_field :image, class: 'form-control' %>
    </div>
  </div>
  <br />
  <div class="row">
    <div class="col-md-4 col-xs-12 col-md-offset-4">
      <%= render save_btn_path, f: form %>
    </div>
  </div>
<% end %>