<table class="table table-responsive table-striped">
	<thead>
		<tr class="align-center">
			<th>Order</th>
			<th>Heading</th>
			<th>Subheading</th>
			<th>Description</th>
			<th colspan="2">Last Modified</th>
			<th colspan="2"></th>
		</tr>
	</thead>
	<tbody>
		<% contents.each do |content| %>
			<tr class="align-center table-hover">
				<td><%= content.index %></td>
				<td><%= content.heading.truncate_words(5) %></td>
				<td><%= nil_check(content.subheading).truncate_words(5) %></td>
				<td><%= description_nil_check(content.description).truncate_words(10).html_safe %></td>
				<td><%= content.user.concat_name %></td>
				<td><%= formateDateTimeWithAt(content.updated_at) %></td>
				<td><%= render "templates/buttons/crud/show", show_path: admin_about_path(content) %></td>
				<td><%= render "templates/buttons/crud/edit", edit_path: edit_admin_about_path(content) %></td>
			</tr>
		<% end %>
	</tbody>
</table>