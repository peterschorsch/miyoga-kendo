<br />
<h1 class="text-center">Change Password</h1>
<hr />
<%= form_with(model: user, local: true, :url => { :action => "update_password" }, class: "form-horizontal", html: { autocomplete: "off" }) do |f| %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <%= f.label :current_password, "Current Password" %> <i>(we need your current password to confirm your changes):</i>
      <%= f.password_field :current_password, class: 'form-control' %>
    </div>
  </div>
  <br />
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <%= f.label :password, "New Password:" %>
      <%= f.password_field :password, class: 'form-control', :autocomplete => "off" %>
    </div>
  </div>
  <br />
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <%= f.label :password_confirmation, "Confirm New Password:" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
  </div>
  <br />
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= f.hidden_field :id, :value => user.id %>
      <%= render save_btn_path, f: f %>
    </div>
  </div>
<% end %>