<div class="row">
  <div class="col-md-3">
    <%= render "templates/buttons/back-to-admin-home" %>
  </div>
  <div class="col-md-3 col-md-offset-6">
    <%= render "templates/buttons/add-new", path: new_admin_user_path, text: "User" %>
  </div>
</div>

<%= render "templates/heading", text: "Miyoga Kendo Roster", list_of_classes: "align-center" %>

<%= render "templates/alerts/notice" %>

<table class="table table-responsive table-striped" id="users_table">
  <thead>
    <tr class="align-center">
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Active?</th>
      <th>Last Login</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr class="align-center">
        <td><%= user.concat_name %></td>
        <td><%= mail_to user.email, user.email, class: "link-text" %></td>
        <td><%= user.display_role %></td>
        <td><%= user.display_active %></td>
        <td><%= user_nil_last_login(user.last_login) %></td>
        <td>
          <%= link_to edit_admin_user_path(user), :class => "btn btn-warning", title: "Edit #{user.firstname}", 'data-toggle' => 'tooltip' do %> 
            <span class="glyphicon glyphicon-edit"></span> Edit
          <% end %>
          <%= link_to [:admin, user], :class => "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' }, title: "Remove #{user.firstname}", 'data-toggle' => 'tooltip' do %> 
            <span class="glyphicon glyphicon-trash"></span> Remove
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
