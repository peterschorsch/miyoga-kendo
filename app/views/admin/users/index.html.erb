<%= render "templates/admin/index-header", path: new_admin_user_path, new_btn_text: "User", heading_text: "Miyoga Kendo Roster" %>

<p class="text-center">Active Users: <%= @active_users.size + @active_admins.size %> | Inactive Users: <%= @inactive_users.size + @inactive_admins.size %></p>
<br />
<%= render alert_path %>
<ul class="nav nav-tabs nav-justified text-link">
  <li class="active"><a data-toggle="tab" href="#active_users">Active Users <span class="badge badge-light"><%= @active_users.size %></span></a></li>
  <li><a data-toggle="tab" href="#active_admins">Active Admins <span class="badge badge-light"><%= @active_admins.size %></span></a></li>
  <li><a data-toggle="tab" href="#inactive_users">Inactive Users <span class="badge badge-light"><%= @inactive_users.size %></span></a></li>
  <li><a data-toggle="tab" href="#inactive_admins">Inactive Admins <span class="badge badge-light"><%= @inactive_admins.size %></span></a></li>
</ul>

<div class="tab-content">
  <div id="active_users" class="tab-pane fade in active">
    <br />
    <%= render "table", users: @active_users %>
  </div>
  <div id="active_admins" class="tab-pane fade">
    <br />
    <%= render "table", users: @active_admins %>
  </div>
  <div id="inactive_users" class="tab-pane fade in">
    <br />
    <%= render "table", users: @inactive_users %>
  </div>
  <div id="inactive_admins" class="tab-pane fade">
    <br />
    <%= render "table", users: @inactive_admins %>
  </div>
</div>
