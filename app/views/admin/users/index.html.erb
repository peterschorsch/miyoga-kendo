<h1 id="notice"><%= notice %></h1>

<h1> Users</h1>

<table class="table table-striped">
  <thead>
    <tr class="align-center">
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Active?</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr class="align-center">
        <td><%= user.concat_name %></td>
        <td><%= user.email %></td>
        <td><%= user.display_role %></td>
        <td><%= user.display_active %></td>
        <td><%= link_to 'Show', admin_user_path(user) %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
        <td><%= link_to 'Remove', admin_users_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

