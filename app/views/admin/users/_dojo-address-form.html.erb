<br />
<h1 class="text-center">Change Dojo Address</h1>
<hr />
<%= form_with(model: @dojo_address, local: true, :url => { :action => "update_dojo_address" }, class: "form-horizontal", html: { autocomplete: "off" }) do |form| %>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
    	<%= form.label :location_name, 'Facility Name:' %>
    	<%= form.text_field :location_name, class: 'form-control' %>
    </div>
  </div>
  <br />
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
    	<%= form.label :address_line_1, 'Address Line 1:' %>
    	<%= form.text_field :address_line_1, class: 'form-control' %>
    </div>
  </div>
  <br />
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
    	<%= form.label :address_line_2, 'Address Line 2:' %>
    	<%= form.text_field :address_line_2, class: 'form-control' %>
    </div>
  </div>
  <br />
  <div class="row">
    <div class="col-xs-4 col-xs-offset-1">
    	<%= form.label :city, 'City:' %>
    	<%= form.text_field :city, class: 'form-control' %>
    </div>
    <div class="col-xs-3">
    	<%= form.label :state_id, 'State:' %>
    	<%= form.select(:state_id, State.return_states_w_names, { :include_blank => "Select a State" }, { :class => "form-control" }) %>
    </div>
    <div class="col-xs-3">
    	<%= form.label :zip_code, 'Zip Code:' %>
    	<%= form.text_field :zip_code, class: 'form-control', :maxlength => 6, :size => 6 %>
    </div>
  </div>
  <br />
  <div class="row">
  	<div class="col-xs-6 col-xs-offset-3">
    	<%= form.label :notes, 'Link to Website:' %>
    	<%= form.text_field :notes, class: 'form-control' %>
    </div>
  </div>
  <br />
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= render save_btn_path, f: form %>
    </div>
  </div>
<% end %>