<%= form_with(model: [:admin, social_medium], local: true, class: "form-horizontal", html: { autocomplete: "off" }) do |form| %>
  <div class="row vertical-align-middle">
    <div class="col-md-1 col-xs-12 text-right"><%= form.label :site_name, 'Name:' %></div>
    <div class="col-md-3 col-xs-12"><%= form.text_field :site_name, { class: "form-control" } %></div>
  </div>
  <br />
  <div class="row vertical-align-middle">
    <div class="col-md-1 col-xs-12 text-right"><%= form.label :site_link, 'Link:' %></div>
    <div class="col-md-5 col-xs-12"><%= form.text_field :site_link, { class: "form-control" } %></div>
  </div>
  <br />
  <div class="row vertical-align-middle">
    <% if social_medium.new_record? %>
      <div class="col-xs-1 text-right"><%= form.label :image, 'Image:' %></div>
      <div class="col-xs-5"><%= form.file_field :image, class: 'form-control' %></div>
    <% else %>
      <div class="col-xs-2 text-right"><%= form.label 'Current Image:' %></div>
      <div class="col-xs-2"><%= image_tag(form.object.image.url, class: "small-form-image", alt: form.object.image_file_name) %></div>
      <div class="col-xs-3 text-right"><%= form.label :image, 'Replace Current Image:' %></div>
      <div class="col-xs-4"><%= form.file_field :image, class: 'form-control' %></div>
    <% end %>
  </div>
  <br />
  <div class="row">
    <div class="col-md-4 col-xs-12 col-md-offset-4">
      <%= render save_btn_path, f: form %>
    </div>
  </div>
<% end %>
