<%= render "templates/buttons/back-to-admin-home" %>

<h1 class="h1-heading">Events</h1>

<p id="notice"><%= notice %></p>

<table class="table table-responsive table-striped" id="events_table">
  <thead>
    <tr class="align-center">
      <th>Name</th>
      <th>Date</th>
      <th>Held in</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr class="align-center">
        <td><%= event.title %></td>
        <td><%= formatEventsDateRange(event.start_date, event.end_date) %></td>
        <td><%= event.address.city %>, <%= event.address.state.name %></td>
        <td>
          <%= link_to edit_admin_event_path(event), :class => "btn btn-warning", title: "Edit #{event.title}", 'data-toggle' => 'tooltip' do %> 
            <span class="glyphicon glyphicon-edit"></span> Edit
          <% end %>
          <%= link_to [:admin, event], :class => "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' }, title: "Remove #{event.title}", 'data-toggle' => 'tooltip' do %> 
            <span class="glyphicon glyphicon-trash"></span> Remove
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= render "templates/buttons/add-new", path: new_admin_event_path, text: "Event" %>
