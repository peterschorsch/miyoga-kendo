<%= render "layouts/admin/index-header", path: new_admin_event_path, new_btn_text: "Event", heading_text: "Events" %>

<table class="table table-responsive table-striped" id="events_table">
  <thead>
    <tr class="align-center">
      <th>Name</th>
      <th>Date</th>
      <th>Held in</th>
      <th>Last Modified by</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr class="align-center table-hover">
        <td><%= event.title %></td>
        <td><%= formatEventsHomeDateRange(event.start_date, event.end_date) %></td>
        <td><%= event.address.city %>, <%= event.address.state.abbreviation %></td>
        <td><%= event.user.concat_name %></td>
        <td><%= link_to "Show", admin_event_path(event), :class => "btn btn-success btn-block" %></td>
        <td>
          <%= link_to edit_admin_event_path(event), :class => "btn btn-warning btn-block", title: "Edit #{event.title}", 'data-toggle' => 'tooltip' do %> 
            <span class="glyphicon glyphicon-edit"></span> Edit
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
