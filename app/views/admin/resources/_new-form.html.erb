<%= form_with(model: [:admin, resource], url: create_new_resource_admin_resources_path, local: true, :validate => true, html: { class: "form-horizontal", autocomplete: "off" }) do |f| %>
	<div class="row text-center">
		<div class="col-xs-2">
			<%= f.label :index, 'Content Order:' %>
			<%= f.select :index, Content.populate_new_index_dropdown(@current_page), {}, { class: 'form-control' } %>
		</div>
		<% if not resource.new_record? %>
			<div class="col-xs-3 col-xs-offset-6">
				<%= f.label :display_content_on_page, 'Display Content:' %>
				<%= f.check_box :display_content_on_page, { class: 'form-control', :checked => !resource.display_content_on_page }, 0, 1 %>
			</div>
		<% end %>
	</div>
	<div class="row text-center">
		<div class="col-xs-12">
			<%= f.label :heading, 'Heading:' %>
			<%= f.text_field :heading, { class: 'form-control' } %>
		</div>
	</div>
	<br />
	<div class="row text-center">
		<div class="col-xs-12">
			<%= f.label :subheading, 'SubHeading:' %>
			<%= f.text_field :subheading, { class: 'form-control' } %>
		</div>
	</div>
	<br />
	<div class="row text-center">
		<div class="col-xs-12">
			<%= f.label :description, 'Description:' %>
			<%= f.cktext_area :description, { class: 'form-control', language: "us", rows: 25 } %>
		</div>
	</div>
	<br />
	<%= render heading_path, text: "Link(s)" %>

	<div id='links'>
		<%= f.fields_for :links do |link| %>
			<%= render 'templates/nested-forms/link_fields', :f => link %>
		<% end %>
		<div class="row">
			<div class="col-xs-4 col-sm-offset-4">
				<%= render "templates/nested-forms/new-link-button", form: f %>
			</div>
		</div>
	</div>
	<br />
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<%= f.hidden_field :article, :value => true if article %>
			<%= render save_btn_path, f: f %>
		</div>
	</div>
<% end %>