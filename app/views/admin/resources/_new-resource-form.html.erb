<%= form_with(model: [:admin, resource], url: create_new_resource_admin_resources_path, local: true, :validate => true, html: { class: "form-horizontal", autocomplete: "off" }) do |f| %>
	<div class="row vertical-align-middle">
		<div class="col-xs-2 align-right"><%= f.label :heading, 'Heading:' %></div>
		<div class="col-xs-9"><%= f.text_field :heading, { class: 'form-control' } %></div>
	</div>
	<br />
	<div class="row vertical-align-middle">
		<div class="col-xs-2 align-right"><%= f.label :subheading, 'SubHeading:' %></div>
		<div class="col-xs-9"><%= f.text_field :subheading, { class: 'form-control' } %></div>
	</div>
	<br />
	<div class="row vertical-align-middle">
		<div class="col-xs-2 align-right"><%= f.label :description, 'Description:' %></div>
		<div class="col-xs-9"><%= f.cktext_area :description, { class: 'form-control', language: "us", rows: 25 } %></div>
	</div>
	<% if resource.new_record? %>
		<%= f.hidden_field :index, :value => Content.populate_new_index_dropdown(@current_page)[0] %>
	<% else %>
		<br />
		<div class="row vertical-align-middle">
			<div class="col-xs-3 align-right"><%= f.label :index, 'Content Order:' %></div>
			<div class="col-xs-2"><%= f.select :index, Content.populate_edit_index_dropdown(resource), {}, { class: 'form-control' } %></div>
			<% if not resource.new_record? %>
				<div class="col-xs-3 align-right"><%= f.label :display_content_on_page, 'Remove Content:' %></div>
				<div class="col-xs-2"><%= f.check_box :display_content_on_page, { class: 'form-control', :checked => !resource.display_content_on_page }, 0, 1 %></div>
			<% end %>
		</div>
	<% end %>
	<br />
	<%= render "templates/heading", text: "Link(s)", list_of_classes: "align-center" %>

	<div id='links'>
		<%= f.fields_for :links do |link| %>
			<%= render 'templates/forms/link_fields', :f => link %>
		<% end %>
		<div class="row">
			<div class="col-xs-4 col-sm-offset-4">
				<%= render "templates/buttons/crud/new-link-nested", form: f %>
			</div>
		</div>
	</div>
	<br />
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<%= f.submit "Save Changes", class: "btn btn-success btn-block" %>
		</div>
	</div>
<% end %>