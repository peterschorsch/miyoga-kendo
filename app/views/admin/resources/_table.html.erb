<table class="table table-responsive table-striped">
	<thead>
		<tr class="text-center">
			<th>Heading</th>
			<th>Subheading</th>
			<th>Description</th>
			<th>Link(s) to</th>
			<th colspan="2">Last Modified</th>
			<th colspan="2" ></th>
		</tr>
	</thead>
	<tbody>
		<% contents.each do |content| %>
			<tr class="text-center table-hover">
				<td><%= content.heading.truncate_words(5) %></td>
				<td><%= nil_check(content.subheading).truncate_words(5) %></td>
				<td><%= description_nil_check(content.description).truncate_words(5).html_safe %></td>
				<td><%= content.links.map{ |l| l.name }.join(", ") %></td>
				<td><%= content.user.concat_name %></td>
				<td><%= formateDateTimeWithAt(content.updated_at) %></td>
				<td><%= render show_btn_path, show_path: admin_resource_path(content) %></td>
				<td><%= render edit_btn_path, edit_path: edit_admin_resource_path(content) %></td>
			</tr>
		<% end %>
	</tbody>
</table>