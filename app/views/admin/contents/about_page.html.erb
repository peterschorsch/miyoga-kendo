<%= render "templates/buttons/back-to-admin-home" %>

<%= render "templates/heading", text: @page.name + " Page", list_of_classes: "align-center" %>

<%= render "templates/alerts/notice" if notice %>

<% @page.contents.order_by_index.each_with_index do |content, index| %>
	<%= render "templates/alerts/form-errors", model: content %>

	<div class="row vertical-align-middle">
		<div class="col-md-10">
			<h1><u><%= content.index %></u>. <%= content.heading.html_safe %> *will <%=content.display_content_on_page ? " " : " NOT " %>be shown to users <%=content.display_content_on_page%>*</h1>
		</div>
		<div class="col-md-2">
			<%= button_tag :class => "btn btn-warning btn-block btn-lg", title: 'Edit', data: { toggle: 'modal', target: "#adminAboutEditModal-#{index}" } do %>
				<span class="glyphicon glyphicon-edit"></span> Edit
			<% end %>
		</div>
	</div>
	<hr />
	<div class="row">
		<div class="col-md-12"><h2><%= content.subheading.blank? ? "*NO SUBHEADING CURRENTLY*" : content.subheading.html_safe %></h2></div>
		<hr />
	</div>
	<br />
	<div class="row">
		<div class="col-md-12"><p><%= content.description.blank? ? "*NO DESCRIPTION CURRENTLY*" : content.description.html_safe %></p></div>
		<hr />
	</div>
	<br />
	<%= render "edit-about-modal", content: content, index: index %>
<% end %>
