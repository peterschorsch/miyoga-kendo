<%= render "layouts/admin/index-header", path: new_admin_practice_path, new_btn_text: "Class", heading_text: "Class Schedule" %>

<table class="table table-responsive table-striped" id="class_schedule_table">
  <thead>
    <tr class="align-center">
      <th>Day</th>
      <th>Time</th>
      <th>Cost per Month</th>
      <th colspan="2">Last Modified</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @practices.each do |practice| %>
      <tr class="align-center table-hover">
        <td><%= practice.day_of_week %></td>
        <td><%= formatTime(practice.start_time) %> - <%= formatTime(practice.end_time) %></td>
        <td>$<%= practice.cost_per_month %></td>
        <td><%= practice.user.concat_name %></td>
        <td><%= formateDateTimeWithAt(practice.updated_at) %></td>
        <td>
          <%= link_to edit_admin_practice_path(practice), :class => "btn btn-warning btn-block", title: "Edit #{practice.day_of_week}", 'data-toggle' => 'tooltip' do %> 
            <span class="glyphicon glyphicon-edit"></span> Edit
          <% end %>
        </td>
        <td>
          <%= link_to [:admin, practice], :class => "btn btn-danger btn-block", method: :delete, data: { confirm: 'Are you sure?' }, title: "Remove #{practice.day_of_week} Class", 'data-toggle' => 'tooltip' do %> 
            <span class="glyphicon glyphicon-trash"></span> Remove
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
