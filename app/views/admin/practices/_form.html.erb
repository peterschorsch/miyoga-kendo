<%= form_with(model: [:admin, practice], local: true) do |form| %>
  <%= render "templates/alerts/form-errors", model: practice %>
  
  <div class="row vertical-align-middle">
    <div class="col-md-2 col-xs-12 align-right"><%= form.label :day_of_week, 'Day of Week:' %></div>
    <div class="col-md-2 col-xs-12">
      <%= form.select :day_of_week, Practice.days_of_week_dropdown_options, {}, { class: 'form-control' } %>
    </div>
  </div>
  <br />
  <div class="row vertical-align-middle">
    <div class="col-md-1 col-md-offset-1 col-xs-12 align-right"><%= form.label :start_time, 'Time:' %></div>
    <div class="col-md-3 col-xs-12"><%= form.time_select :start_time, { ampm: true } %> to <%= form.time_select :end_time, {ampm: true} %></div>
  </div>
  <br />
  <div class="row vertical-align-middle">
    <div class="col-md-2 col-xs-12 align-right"><%= form.label :cost_per_month, 'Cost per Month:' %></div>
    <div class="col-md-2 col-xs-12"><%= form.text_field :cost_per_month, { class: "form-control" } %></div>
  </div>
  <br />
  <div class="row">
    <div class="col-md-4 col-xs-12 col-md-offset-4">
      <%= form.submit "Save Class", class: 'btn btn-success btn-block' %>
    </div>
  </div>
<% end %>
