<% if can? :manage, @new_announcement %>
	<div class="row">
		<div class="col-md-2 col-md-offset-10 col-xs-6 col-xs-offset-3">
			<%= render "templates/buttons/crud/new-button-tag", target: "#newsAddModal", button_text: "News Item" %>
			<%= render "add-modal", new_announcement: @new_announcement %>
		</div>
	</div>
	<%= render "templates/alerts/form-errors", model: @new_announcement %>
	<%= render "templates/alerts/notice" %>
<% end %>

<%= render "templates/heading", text: @current_page.name, list_of_classes: "" %>

<div class="row">
	<% @pinned_news.each do |news| %>
		<div class="col-md-4 col-sm-12">
			<div class="panel panel-default card">
				<%= render "admin-function", announcement: news if can? :manage, news %>
				<div class="row vertical-align-middle">
					<div class="col-md-1">
						<h2><span class="glyphicon glyphicon-star yellow"></span></h2>
					</div>
					<div class="col-md-11">
						<h2><%= news.heading %></h2>
					</div>
				</div>
				<div class="row">
					<div class="col-md-6">
						<h5><%= format_header_date(news.created_at) %></h5>
					</div>
					<div class="col-md-6 align-right">
						<h5>Posted by: <strong><%= news.user.concat_name %></strong></h5>
					</div>
				</div>
				<div class="row">
					<div class="col-md-12">
						<%= render "announcements/description-only", news: news %>
					</div>
				</div>
			</div>
		</div>
	<% end %>
</div>
<hr />
<% @other_news.in_groups_of(2, false) do |news_group| %>
	<div class="row">
		<% news_group.each do |news| %>
			<div class="col-md-6 col-xs-12">
				<div class="panel panel-default card">
					<%= render "admin-function", announcement: news if can? :manage, news %>
					<div class="row">
						<div class="col-md-12">
							<h2><%= news.heading %></h2>
						</div>
					</div>
					<div class="row">
						<div class="col-md-4">
							<h5><%= format_header_date(news.created_at) %></h5>
						</div>
						<div class="col-md-4 col-md-offset-4 align-right">
							<h5>Posted by: <strong><%= news.user.concat_name %></strong></h5>
						</div>
					</div>
					<div class="row">
						<% if tf_check(news.image_file_name) %>
							<div class="col-md-12">
								<%= render "announcements/description-only", news: news %>
							</div>
						<% else %>
							<%= render "description-with-image", news: news %>
						<% end %>
					</div>
				</div>
			</div>
		<% end %>
	</div>
<% end %>
