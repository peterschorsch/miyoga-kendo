<%= render "templates/heading", text: @current_page.name, list_of_classes: "" %>

<div class="row">
	<% @pinned_news.each do |news| %>
		<div class="col-md-4 col-sm-12">
			<div class="panel panel-default card">
				<div class="row padding-left-right">
					<div class="col-md-2">
						<h2><span class="glyphicon glyphicon-star yellow"></span></h2>
					</div>
					<div class="col-md-10">
						<h2><%= news.heading %></h2></h5>
					</div>
				</div>
				<div class="row padding-left-right">
					<div class="col-md-6">
						<h5><%= format_header_date(news.created_at) %></h5>
					</div>
					<div class="col-md-6 align-right">
						<h5>Posted by: <strong><%= news.user.concat_name %></strong></h5>
					</div>
				</div>
				<div class="row padding-left-right padding-bottom">
					<div class="col-md-12">
						<%= simple_format(news.description, wrapper_tag: "p", class: 'indent-paragraph') %>
					</div>
				</div>
			</div>
		</div>
	<% end %>
</div>
<hr />
<% @other_news.in_groups_of(2, false) do |news_group| %>
	<div class="row">
		<% news_group.each do |news| %>
			<div class="col-md-6 col-xs-12">
				<div class="row">
					<div class="col-md-12">
						<h2><%= news.heading %></h2>
					</div>
				</div>
				<div class="row">
					<div class="col-md-4">
						<h5><%= format_header_date(news.created_at) %></h5>
					</div>
					<div class="col-md-4 align-right">
						<h5>Posted by: <strong><%= news.user.concat_name %></strong></h5>
					</div>
				</div>
				<div class="row">
					<% if tf_check(news.image_file_name) %>
						<%= render "text-only-news", news: news %>
					<% else %>
						<%= render "text-image-news", news: news %>
					<% end %>
				</div>
			</div>
		<% end %>
	</div>
	<hr />
<% end %>
