<div class="modal fade" id="newsAddModal" tabindex="-1" role="dialog" aria-labelledby="newsModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="modal-title" id="newsModalLabel">Add News</h1>
			</div>
			<div class="modal-body">
				<%= form_with(model: new_announcement, local: true, :validate => true, html: { class: "form-horizontal", autocomplete: "off", multipart: true }) do |form| %>
					<%= render "admin/announcements/form-fields", form: form %>
			</div>
			<div class="modal-footer">
				<%= submit_tag 'Cancel', :type => 'button', class: "btn btn-danger", data: { toggle: 'modal', 'target': "#newsAddModal" } %>
				<%= form.submit "Save Changes", class: 'btn btn-success' %>
			</div>
			<% end %>
		</div>
	</div>
</div>