<h1 id="notice"><%= notice %></h1>

<h1><%=@user.concat_name%></h1>
<h2><%=@user.email%></h2>

<% if current_user.is_admin? %>
	<h3><%=@user.display_active%> <%=@user.role%></h3>
	<h3>Last Login: <%=user_nil_last_login(@user.last_login)%></h3>
<% end %>

<div class="col-md-4 col-md-offset-4">
	<%= link_to "Edit", edit_user_path(@user), class: "btn btn-warning btn-block" %>
</div>