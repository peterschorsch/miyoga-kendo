<%= form_with(model: current_user, local: true, class: "form-horizontal", html: { autocomplete: "off" }) do |form| %>
  <div class="row text-center">
    <div class="col-md-5 col-xs-12 col-md-offset-1">
      <%= form.label :firstname, 'First Name:' %>
      <%= form.text_field :firstname, class: 'form-control' %>
    </div>
    <div class="col-md-5 col-xs-12">
      <%= form.label :lastname, 'Last Name:' %>
      <%= form.text_field :lastname, class: 'form-control' %>
    </div>
  </div>
  <br />
  <div class="row text-center">
    <div class="col-md-10 col-md-offset-1">
      <%= form.label :email, 'Email:' %>
      <%= form.text_field :email, class: 'form-control' %>
    </div>
  </div>
  <br />
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= render save_btn_path, f: form %>
    </div>
  </div>
<% end %>
