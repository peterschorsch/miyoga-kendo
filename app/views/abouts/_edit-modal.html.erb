<div class="modal fade" id="aboutEditModal-<%=index%>" tabindex="-1" role="dialog" aria-labelledby="aboutModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="modal-title" id="aboutModalLabel">Edit Content</h1>
			</div>
			<div class="modal-body">
				<%= form_with(model: content, url: content_path(content), method: "patch", local: true, :validate => true, html: { class: "form-horizontal", autocomplete: "off" }) do |f| %>
					<div class="row vertical-align-middle">
						<div class="col-xs-2 text-right"><%= f.label :heading, 'Heading:' %></div>
		          		<div class="col-xs-9"><%= f.text_field :heading, { class: 'form-control' } %></div>
		          	</div>
		          	<br />
		          	<div class="row vertical-align-middle">
						<div class="col-xs-2 text-right"><%= f.label :subheading, 'SubHeading:' %></div>
		          		<div class="col-xs-9"><%= f.text_field :subheading, { class: 'form-control' } %></div>
		          	</div>
		          	<br />
		          	<div class="row vertical-align-middle">
						<div class="col-xs-2"><%= f.label :description, 'Description:' %></div>
		          		<div class="col-xs-9"><%= f.cktext_area :description, { class: 'form-control', language: "us", rows: 25 } %></div>
		          	</div>
		          	<br />
		          	<div class="row vertical-align-middle">
						<div class="col-xs-3"><%= f.label :index, 'Content Order:' %></div>
						<div class="col-xs-2"><%= f.select :index, Content.populate_edit_index_dropdown(content), {}, { class: 'form-control' } %></div>
						<div class="col-xs-3"><%= f.label :display_content_on_page, 'Display Content:' %></div>
						<div class="col-xs-2"><%= f.check_box :display_content_on_page, { class: 'form-control' } %></div>
					</div>
					<br />
					<div id='images'>
						<%= f.fields_for :images do |image| %>
							<%= render 'templates/nested-forms/image_fields', :f => image %>
						<% end %>
						<div class="row">
							<div class="col-xs-4 col-sm-offset-4">
								<%= render "templates/nested-forms/new-image-button", form: f %>
							</div>
						</div>
					</div>
			</div>
			<div class="modal-footer">
				<%= f.hidden_field :id, :value => content.id %>
				<%= f.hidden_field :article, :value => content.check_links_articles %>
				<%= render modal_cancel_save_btn_path, f: f, target: "#aboutEditModal-#{index}" %>
			</div>
			<% end %>
		</div>
	</div>
</div>