<div class="modal fade" id="practiceAddModal" tabindex="-1" role="dialog" aria-labelledby="aboutModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="modal-title" id="practiceAddModal">Add Class</h1>
			</div>
			<div class="modal-body">
				<%= form_with(model: new_practice, local: true, :validate => true, html: { class: "form-horizontal", autocomplete: "off" }) do |f| %>
					<div class="row vertical-align-middle">
						<div class="col-xs-3 text-right"><%= f.label :day_of_week, 'Day of Week:' %></div>
						<div class="col-xs-8"><%= f.select :day_of_week, Practice.days_of_week_dropdown_options, {}, { class: 'form-control' } %></div>
					</div>
					<br />
					<div class="row vertical-align-middle">
						<div class="col-xs-4 text-right"><%= f.label :start_time, 'Start Time - End Time' %></div>
						<div class="col-xs-7"><%= f.time_select :start_time, { ampm: true } %> to <%= f.time_select :end_time, { ampm: true } %></div>
					</div>
					<br />
					<div class="row vertical-align-middle">
						<div class="col-xs-3 text-right"><%= f.label :cost_per_month, 'Cost per Month:' %></div>
						<div class="col-xs-8"><%= f.text_field :cost_per_month, { class: 'form-control' } %></div>
					</div>
			</div>
			<div class="modal-footer">
				<%= submit_tag 'Cancel', :type => 'button', class: "btn btn-danger", data: { toggle: 'modal', 'target': "#practiceAddModal" } %>
				<%= f.submit "Save Changes", class: 'btn btn-success' %>
			</div>
			<% end %>
		</div>
	</div>
</div>