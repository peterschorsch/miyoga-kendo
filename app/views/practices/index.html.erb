<% if current_user.is_admin? %>
	<div class="row">
		<div class="col-md-2 col-md-offset-10 col-xs-6 col-xs-offset-3">
			<%= button_tag :class => "btn btn-info btn-block btn-lg", title: 'Add', data: { toggle: 'modal', target: "#practiceAddModal" } do %>
				<span class="glyphicon glyphicon-plus"></span> Add New Class
			<% end %>
		</div>
	</div>
	<%= render "add-modal", new_practice: @new_practice %>
	<%= render "templates/alerts/form-errors", model: @new_practice %>
<% end %>

<%= render "templates/heading", text: @content.heading, list_of_classes: "align-center" %>

<%= render "templates/alerts/notice" if notice && current_user.is_admin? %>

<% @practices.each_with_index do |practice, index| %>
	<%= render "edit-modal", practice: practice, index: index %>
	<%= render "templates/modals/remove-record-dialog", record: practice, index: index, heading: "Class" %>
	<%= current_user.is_admin? ? raw("<div class='row vertical-align-middle'>") : raw("<div class='row'>") %>
		<div class="col-md-4 col-md-offset-4">
			<p class="align-center"><%= practice.day_of_week %> | <%= formatPracticeTime(practice.start_time, practice.end_time) %></p>
		</div>
		<% if current_user.is_admin? %>
			<div class="col-md-2">
				<%= button_tag :class => "btn btn-warning btn-block btn-lg", title: 'Edit', data: { toggle: 'modal', target: "#practiceEditModal-#{index}" } do %>
					<span class="glyphicon glyphicon-edit"></span> Edit
				<% end %>
			</div>
			<div class="col-md-2">
				<%= button_tag :class => "btn btn-danger btn-block btn-lg", title: 'Remove', data: { toggle: 'modal', target: "#youSureModal-#{index}" } do %>
					<span class="glyphicon glyphicon-trash"></span> Remove
				<% end %>
			</div>
		<% end %>
	</div>
	<div class="row">
		<div class="col-md-12">
			<p class="align-center"><%= @practice_count==index ? "" : "&" %></p>
		</div>
	</div>
<% end %>

<br /><br />
<p class="align-center"><%=@practice_cost%></p>
<br />

<div class="row paragraph-indentation">
	<div class="col-md-10 col-md-offset-1">
		<table style="width:100%;">
			<tr>
				<td rowspan="2">
					<%= embed_google_maps(address: "Japanese Culture Center 1016 W. Belmont Ave Chicago IL 60657", height: 600, width: 600).html_safe %>	
				</td>
				<td class="jcc-images"><%= image_tag("practices_page/outside_jcc.jpg", alt: "JCC") %></td>
			</tr>
			<tr>
				<td class="jcc-images"><%= image_tag("practices_page/second_floor_jcc.jpg", alt: "Second Floor of JCC") %></td>
			</tr>
		</table>
		
	</div>
</div>

<br /><br /><br />

<div class="row paragraph-indentation">
	<div class="col-md-6 col-md-offset-3">
		<p class="align-center">Contact Us:</p>
		<p class="align-center"><%= mail_to @miyoga_user.email, @miyoga_user.email, class: "link-text" %></p>
		<br />
		<p class="align-center">To Learn more information about the Japanese Culture Center:</p>
		<p class="align-center"><%= link_to "https://japaneseculturecenter.com/", "https://japaneseculturecenter.com/", class: "link-text", target: :_blank %></p>
	</div>
</div>
