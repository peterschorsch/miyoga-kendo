<br />
<div class="row">
	<div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default">
            <div class="panel-heading">
              <h2 class="text-center">Change Password</h2>
            </div>
            <div class="panel-body align-center">
              <p>Please enter the temporary password sent to your email.</p>
              <%= form_with url: change_temporary_password_path, html: { autocomplete: "off" } do |f| %>
                <%= f.text_field :token, id: :user_token, class: 'form-control', placeholder: 'Please enter your temporary password' %>
                <br /><br />
                <p>Your new password <strong>MUST</strong> be at least 8 characters in length and contain one uppercase letter and special character.</p>
                <%= f.password_field :password, id: :user_password, class: 'form-control', placeholder: 'Please enter your new password' %><br />
                <%= f.submit "Submit", class: "btn btn-success btn-block" %>
              <% end %>
            </div>
        </div>
    </div>
</div>