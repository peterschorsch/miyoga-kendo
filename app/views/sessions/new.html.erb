<br />
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default">
      <div class="panel-body">
        <%=render alert_path %>
        <% if notice %>
          <div class="col-xs-10 col-xs-offset-1"><h3 class="text-center col-xs-8 col-xs-offset-2" id="notice"><%= notice %></h3></div>
        <% end %>
        <div class="col-sm-8 col-sm-offset-2 col-xs-12"><%= image_tag("logos/miyoga_crest.png", class: "miyoga_header_image", class: "image-center", alt: "Miyoga Logo") %></div>
        <div class="col-xs-6 col-xs-offset-3"><h1 class="text-center">Admin Login</h1></div>

        <%= form_tag sessions_path, html: { autocomplete: "off" } do |form| %>
          <div class="form-group">
            <%= text_field_tag :email, "", class: "form-control", placeholder: "Please enter your Email" %>
          </div>
          <div class="form-group">
            <%= password_field_tag :password, "", class: "form-control", placeholder: "Please enter your Password" %>
          </div>
          <div class="form-group text-center"><%= link_to "Forgot Password?", forgotton_password_path, class: "header-link-text" %></div>
          <div class="actions form-group">
            <%= button_tag(type: 'submit', class: "btn btn-success btn-block btn-lg") do %>
              Login <span class="glyphicon glyphicon-log-in"></span>
            <% end %>
          </div>
          <%= link_to 'Return to Home Page', root_path, class: 'btn btn-danger btn-block btn-lg' %>
        <% end %>
        <br /><br />
      </div>
    </div>
  </div>
</div>
