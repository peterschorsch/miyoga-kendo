<br />
<div class="row">
	<div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h2 class="text-center">Create Password</h2>
          </div>
          <div class="panel-body text-center">
            <% if notice %>
              <h1 id="notice"><%= notice %></h1>
            <% end %>
            <p>Enter the token found in the email sent to you.</p>
            <%= form_with url: password_reset_path, html: { autocomplete: "off" } do |f| %>
              <%= f.text_field :token, id: :user_token, class: 'form-control', placeholder: 'Please enter Token' %>
              <br />
              <p>Your new password <strong>MUST</strong> be at least 8 characters in length and contain one uppercase letter and special character.</p>
              <%= f.password_field :password, id: :user_password, class: 'form-control', placeholder: 'Please enter your New Password' %><br />
              <%= f.submit "Submit", class: "btn btn-success btn-block" %>
            <% end %>
          </div>
        </div>
    </div>
</div>